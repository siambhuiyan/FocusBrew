{
  "name": "focus-brew-pomodoro",
  "version": "2.0.0",
  "description": "Professional Pomodoro Timer with Coffee Cup Animation",
  "author": "Siam Bhuiyan",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "cross-env": "^7.0.3",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.263.1",
    "recharts": "^2.8.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently --kill-others-on-fail \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-dev-win": "concurrently --kill-others-on-fail \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "cross-env NODE_ENV=development concurrently --kill-others-on-fail \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build",
    "build-electron": "npm run build && electron-builder --publish=never",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "build": {
    "appId": "com.focusbrew.pomodoro",
    "productName": "FocusBrew",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
